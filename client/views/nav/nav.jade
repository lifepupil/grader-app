    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Grader-app
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li: a(ui-sref='new-assignment'): i.fa.fa.fa-info &nbsp; New Assignment
        li: a(ui-sref='grade-entry'): i.fa.fa.fa-question &nbsp; Grade Entry
        li: a(ui-sref='add-student'): i.fa.fa.fa-question &nbsp; Add Student
        li: a(ui-sref='grade-display'): i.fa.fa.fa-question &nbsp; Display Grades
        li: a(ui-sref='contact'): i.fa.fa.fa-phone &nbsp; Contact
        li: button.btn.btn-danger(ng-click='logout()'): i.fa.fa-sign-out &nbsp; {{displayName}}
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
